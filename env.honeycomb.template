# Honeycomb Production Environment Configuration
# Copy this to .env and update with your actual values

# Telegram Bot Configuration (REQUIRED)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# MLB API Configuration (defaults should work)
# MLB_API_BASE_URL=https://statsapi.mlb.com/api/v1
# MARINERS_TEAM_ID=136

# Database Configuration
DATABASE_URL=sqlite:///data/mariners_bot.db

# Scheduler Configuration
SCHEDULER_TIMEZONE=America/Los_Angeles
NOTIFICATION_ADVANCE_MINUTES=5
SCHEDULE_SYNC_HOUR=6

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
ENVIRONMENT=production
HEALTH_CHECK_PORT=8000

# Honeycomb OpenTelemetry Configuration
OTEL_SERVICE_NAME=mariners_bot
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_EXPORTER_OTLP_ENDPOINT=https://api.honeycomb.io
OTEL_EXPORTER_OTLP_HEADERS=x-honeycomb-team=your_honeycomb_api_key_here
OTEL_TRACES_EXPORTER=otlp
OTEL_TRACES_TO_STDOUT=false

# Optional: Additional Honeycomb Configuration
# OTEL_EXPORTER_OTLP_TIMEOUT=10
# OTEL_EXPORTER_OTLP_COMPRESSION=gzip
