[bandit]
# Skip tests that are safe or expected in our context
skips = B101,B104,B105,B106,B404,B601,B602,B603,B607,B701

# B101: assert_used - Common in test files and acceptable
# B104: hardcoded_bind_all_interfaces - Necessary for Docker health checks  
# B105: hardcoded_password_string - Test tokens are not real passwords
# B106: hardcoded_password_funcarg - Test data in fixtures
# B404: import_subprocess - Safe subprocess usage in our CLI commands
# B601: subprocess usage - We use subprocess securely
# B602: subprocess_popen_with_shell_equals_true - Not applicable
# B603: subprocess_without_shell_equals_true - Safe subprocess usage
# B607: start_process_with_partial_path - Safe in migration context
# B701: jinja2_autoescape_false - Not using jinja2

# Exclude paths that should not be scanned
exclude_dirs = .venv,node_modules,.git,__pycache__